#include <stdio.h>

int main() {
  int edad;

  printf("Por favor, introduce la edad de la persona: ");
  scanf("%d", &edad);

  if (edad < 18) {
    printf("La persona es Menor de edad.\n");
  } else if (edad >= 18 && edad <= 64) {
    printf("La persona es Adulto.\n");
  } else {
    printf("La persona es Adulto mayor.\n");
  }

  return 0;
}
